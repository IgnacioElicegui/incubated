    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Mandate"
          ],
          "description": "Property. NGSI data type. It has to be Mandate"
        },
        "lifeSpan": {
          "type": "string",
          "format": "duration",
          "description": "Relationship. XXX (mal hecho esto deber√≠a ser fechas) The dates of creation and striking-off of a mandate in the eMandate Registry"
        },
        "mandator": {
          "type": "string",
          "format": "uri",
          "description": "Relationship. The person that empowers"
        },
        "Empowerment": {
          "type": "array",
          "description": "Relationship. The assignment of one power to one or more natural or legal persons.",
